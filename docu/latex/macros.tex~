\providecommand{\code}[1]{\texttt{#1}}

\providecommand{\myfigure}[3]{
	\begin{figure}[H]
		\begin{center}
			\epsfig{file=Bilder/#2,scale=#3}
		\end{center}
		\vspace{-3ex}
		\caption{#1 \label{#1}}
	\end{figure}
}

\providecommand{\myfig}[2]{
	\includegraphics[scale=0.5]{Bilder/#2}
}
